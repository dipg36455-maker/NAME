import 'package:flutter/material.dart';

void main() => runApp(const CalculatorApp());

class CalculatorApp extends StatelessWidget {
  const CalculatorApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Calculator',
      theme: ThemeData.light().copyWith(
        colorScheme: ColorScheme.fromSeed(seedColor: Colors.blue),
        useMaterial3: true,
      ),
      darkTheme: ThemeData.dark().copyWith(
        colorScheme: ColorScheme.fromSeed(seedColor: Colors.blue),
        useMaterial3: true,
      ),
      themeMode: ThemeMode.system,
      debugShowCheckedModeBanner: false,
      home: const CalculatorScreen(),
    );
  }
}

class CalculatorScreen extends StatefulWidget {
  const CalculatorScreen({super.key});

  @override
  State<CalculatorScreen> createState() => _CalculatorScreenState();
}

class _CalculatorScreenState extends State<CalculatorScreen> {
  // Calculator state variables
  String _display = '0';
  String _expression = '';
  double _firstNumber = 0;
  double _secondNumber = 0;
  String _operator = '';
  bool _shouldResetDisplay = false;
  bool _hasDecimal = false;

  // Handle digit button press
  void _handleDigit(String digit) {
    setState(() {
      if (_shouldResetDisplay) {
        _display = digit;
        _shouldResetDisplay = false;
        _hasDecimal = false;
      } else {
        _display = _display == '0' ? digit : _display + digit;
      }
    });
  }

  // Handle operator button press
  void _handleOperator(String operator) {
    setState(() {
      if (_operator.isEmpty) {
        _firstNumber = double.parse(_display);
        _operator = operator;
        _expression = '$_firstNumber $operator ';
        _shouldResetDisplay = true;
        _hasDecimal = false;
      } else {
        _calculate();
        _operator = operator;
        _expression = '$_firstNumber $operator ';
        _shouldResetDisplay = true;
        _hasDecimal = false;
      }
    });
  }

  // Handle decimal point
  void _handleDecimal() {
    setState(() {
      if (_shouldResetDisplay) {
        _display = '0.';
        _shouldResetDisplay = false;
        _hasDecimal = true;
      } else if (!_hasDecimal) {
        _display = _display + '.';
        _hasDecimal = true;
      }
    });
  }

  // Handle clear (C) - clears current display
  void _handleClear() {
    setState(() {
      _display = '0';
      _hasDecimal = false;
    });
  }

  // Handle all clear (AC) - resets everything
  void _handleAllClear() {
    setState(() {
      _display = '0';
      _expression = '';
      _firstNumber = 0;
      _secondNumber = 0;
      _operator = '';
      _shouldResetDisplay = false;
      _hasDecimal = false;
    });
  }

  // Handle delete (⌫) - removes last digit
  void _handleDelete() {
    setState(() {
      if (_display.length > 1) {
        _display = _display.substring(0, _display.length - 1);
        // Check if decimal point was removed
        if (!_display.contains('.')) {
          _hasDecimal = false;
        }
      } else {
        _display = '0';
        _hasDecimal = false;
      }
    });
  }

  // Perform calculation
  void _calculate() {
    if (_operator.isEmpty) return;

    _secondNumber = double.parse(_display);
    double result = 0;

    try {
      switch (_operator) {
        case '+':
          result = _firstNumber + _secondNumber;
          break;
        case '-':
          result = _firstNumber - _secondNumber;
          break;
        case '×':
          result = _firstNumber * _secondNumber;
          break;
        case '÷':
          if (_secondNumber == 0) {
            throw Exception('Division by zero');
          }
          result = _firstNumber / _secondNumber;
          break;
      }

      // Format result to remove trailing zeros
      String resultStr = result.toString();
      if (resultStr.contains('.') && resultStr.endsWith('0')) {
        while (resultStr.contains('.') && resultStr.endsWith('0')) {
          resultStr = resultStr.substring(0, resultStr.length - 1);
        }
        if (resultStr.endsWith('.')) {
          resultStr = resultStr.substring(0, resultStr.length - 1);
        }
      }

      setState(() {
        _display = resultStr;
        _firstNumber = result;
        _operator = '';
        _expression = '';
        _shouldResetDisplay = true;
        _hasDecimal = resultStr.contains('.');
      });
    } catch (e) {
      setState(() {
        _display = 'Error';
        _expression = '';
        _firstNumber = 0;
        _operator = '';
        _shouldResetDisplay = true;
        _hasDecimal = false;
      });
    }
  }

  // Handle equals button
  void _handleEquals() {
    if (_operator.isNotEmpty) {
      _calculate();
    }
  }

  // Build calculator button
  Widget _buildButton({
    required String text,
    Color? backgroundColor,
    Color? textColor,
    bool isWide = false,
    required VoidCallback onPressed,
  }) {
    return Container(
      margin: const EdgeInsets.all(4),
      child: ElevatedButton(
        onPressed: onPressed,
        style: ElevatedButton.styleFrom(
          backgroundColor: backgroundColor ?? Theme.of(context).colorScheme.primaryContainer,
          foregroundColor: textColor ?? Theme.of(context).colorScheme.onPrimaryContainer,
          shape: RoundedRectangleBorder(
            borderRadius: BorderRadius.circular(12),
          ),
          minimumSize: Size(isWide ? 160 : 72, 72),
          padding: EdgeInsets.zero,
          elevation: 2,
          shadowColor: Theme.of(context).shadowColor,
        ),
        child: Text(
          text,
          style: TextStyle(
            fontSize: 24,
            fontWeight: FontWeight.w500,
          ),
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    final colorScheme = Theme.of(context).colorScheme;
    final isDark = Theme.of(context).brightness == Brightness.dark;

    return Scaffold(
      appBar: AppBar(
        title: const Text('Calculator'),
        centerTitle: true,
        backgroundColor: colorScheme.primary,
        foregroundColor: colorScheme.onPrimary,
      ),
      body: SafeArea(
        child: Column(
          children: [
            // Display area
            Expanded(
              flex: 2,
              child: Container(
                color: colorScheme.surface,
                padding: const EdgeInsets.all(20),
                child: Column(
                  mainAxisAlignment: MainAxisAlignment.end,
                  crossAxisAlignment: CrossAxisAlignment.stretch,
                  children: [
                    // Expression display
                    Text(
                      _expression,
                      textAlign: TextAlign.right,
                      style: TextStyle(
                        fontSize: 20,
                        color: colorScheme.onSurface.withOpacity(0.7),
                      ),
                    ),
                    const SizedBox(height: 8),
                    // Main display
                    Text(
                      _display,
                      textAlign: TextAlign.right,
                      style: TextStyle(
                        fontSize: 48,
                        fontWeight: FontWeight.w300,
                        color: colorScheme.onSurface,
                      ),
                      maxLines: 1,
                      overflow: TextOverflow.ellipsis,
                    ),
                  ],
                ),
              ),
            ),
            // Buttons area
            Expanded(
              flex: 5,
              child: Container(
                padding: const EdgeInsets.all(12),
                color: colorScheme.surfaceVariant,
                child: Column(
                  children: [
                    // First row: AC, C, ⌫, ÷
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                      children: [
                        _buildButton(
                          text: 'AC',
                          backgroundColor: isDark ? Colors.red.shade800 : Colors.red.shade300,
                          textColor: Colors.white,
                          onPressed: _handleAllClear,
                        ),
                        _buildButton(
                          text: 'C',
                          backgroundColor: isDark ? Colors.orange.shade800 : Colors.orange.shade300,
                          textColor: Colors.white,
                          onPressed: _handleClear,
                        ),
                        _buildButton(
                          text: '⌫',
                          backgroundColor: isDark ? Colors.blueGrey.shade800 : Colors.blueGrey.shade300,
                          textColor: Colors.white,
                          onPressed: _handleDelete,
                        ),
                        _buildButton(
                          text: '÷',
                          backgroundColor: colorScheme.secondaryContainer,
                          textColor: colorScheme.onSecondaryContainer,
                          onPressed: () => _handleOperator('÷'),
                        ),
                      ],
                    ),
                    // Second row: 7, 8, 9, ×
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                      children: [
                        _buildButton(
                          text: '7',
                          onPressed: () => _handleDigit('7'),
                        ),
                        _buildButton(
                          text: '8',
                          onPressed: () => _handleDigit('8'),
                        ),
                        _buildButton(
                          text: '9',
                          onPressed: () => _handleDigit('9'),
                        ),
                        _buildButton(
                          text: '×',
                          backgroundColor: colorScheme.secondaryContainer,
                          textColor: colorScheme.onSecondaryContainer,
                          onPressed: () => _handleOperator('×'),
                        ),
                      ],
                    ),
                    // Third row: 4, 5, 6, -
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                      children: [
                        _buildButton(
                          text: '4',
                          onPressed: () => _handleDigit('4'),
                        ),
                        _buildButton(
                          text: '5',
                          onPressed: () => _handleDigit('5'),
                        ),
                        _buildButton(
                          text: '6',
                          onPressed: () => _handleDigit('6'),
                        ),
                        _buildButton(
                          text: '-',
                          backgroundColor: colorScheme.secondaryContainer,
                          textColor: colorScheme.onSecondaryContainer,
                          onPressed: () => _handleOperator('-'),
                        ),
                      ],
                    ),
                    // Fourth row: 1, 2, 3, +
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                      children: [
                        _buildButton(
                          text: '1',
                          onPressed: () => _handleDigit('1'),
                        ),
                        _buildButton(
                          text: '2',
                          onPressed: () => _handleDigit('2'),
                        ),
                        _buildButton(
                          text: '3',
                          onPressed: () => _handleDigit('3'),
                        ),
                        _buildButton(
                          text: '+',
                          backgroundColor: colorScheme.secondaryContainer,
                          textColor: colorScheme.onSecondaryContainer,
                          onPressed: () => _handleOperator('+'),
                        ),
                      ],
                    ),
                    // Fifth row: 0, ., =
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                      children: [
                        _buildButton(
                          text: '0',
                          isWide: true,
                          onPressed: () => _handleDigit('0'),
                        ),
                        _buildButton(
                          text: '.',
                          onPressed: _handleDecimal,
                        ),
                        _buildButton(
                          text: '=',
                          backgroundColor: colorScheme.primary,
                          textColor: colorScheme.onPrimary,
                          onPressed: _handleEquals,
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
